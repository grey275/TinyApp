<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <title>TinyApp</title>
  </head>
  <body style="font-size:20px; padding:50px;">
    <% include ./partials/_header %>
    <table class="table">
      <thead>
        <tr>
          <th>Short Link</th>
          <th>Original</th>
          <th>Time Created</th>
          <th>
        </tr>
      </thead>
      <tbody>
        <% for ( urlObj of Object.values(usersUrls)) { %>
          <% let { id, longUrl, time } = urlObj; %>
          <tr>
            <%- include("./partials/_link_pair.ejs", {...urlObj,}); %>
            <td>
              <form class="form-inline" method="POST" action=<%= `/urls/${id}/delete` %>>
                <button type="submit" class="btn btn-primary">Delete</button>
              </form>
              <form class="form-inline" method= "GET" action="<%= `/urls/${id}` %>">
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>