<div class="navbar navbar-light bg-light d-flex p-2">
  <h1 class="title">TinyApp</h1>
  <% if (username) { %>
    <%= `Signed in as ${username}` %>
    <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Log Out
        </button>
      </div>
    </form>
  <% } else { %>
    <form class="form-inline fg2" action="/login" method="POST">
      <div class="form-group small">
        <label for="longURL">Sign in:</label>
        <input class="form-control-sm d-inline-flex" type="text" name="username" placeholder="john doe" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-primary">Log In</button>
      </div>
    </form>
  <% } %>
  <form class="form-inline-fg2" action="/urls/new" method="GET">
    <button type="submit" class="btn-btn-primary">New Url</button>
  </form>
</div>